<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1>New Recipe</h1>

  <div class="field">
    <h2>
      <%= form.label :recipe_image %>
    </h2>
    <%= form.file_field :recipe_image %>
  </div>

  <div class="field">
    <h2>
      <%= form.label :title %>
    </h2>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <h2>
      <%= form.label :recipe_description %>
    </h2>
    <%= form.text_field :recipe_description %>
  </div>

  <div class="field">
    <h2>
      <%= form.label :portions %>
    </h2>
    <%= form.number_field :portions %>
  </div>

  <div class="field">
    <h2>
      <%= form.label :time %>
    </h2>
    <%= form.number_field :time %>
  </div>

  <div class="field">
    <h2>
      <%= form.label :difficulty %>
    </h2>
    <%= select("recipe", "difficulty", options_for_select([['Легко'], ['Не просто'], ['Сложно']]), {include_blank: 'Насколько сложно?'}) %>
  </div>

  <div class="field">
    <h2>
      <%= form.label :nutritions %>
    </h2>
    <%= form.number_field :nutritions %>
  </div>


  <div class="actions">
    <%= form.submit 'Добавить ингредиент', :class => 'submitButton' %>
  </div>
<% end %>
