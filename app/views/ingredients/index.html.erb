<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<section>
  <% @ingredients.each do |ingredient| %>
    <div class="card">
      <div class="">
        <h2>Name</h2>
        <p><%= ingredient.name %></p>
      </div>

      <div class="">
        <h2>Nutritions</h2>
        <p><%= ingredient.nutritions %></p>
      </div>

      <a><%= link_to 'Show', ingredient %></a>
      <a><%= link_to 'Edit', edit_ingredient_path(ingredient) %></a>
      <a><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></a>
    </div>

  <% end %>
</section>

<br>

