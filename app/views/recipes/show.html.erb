<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Portions:</strong>
  <%= @recipe.portions %>
</p>

<p>
  <strong>Time:</strong>
  <%= @recipe.time %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @recipe.difficulty %>
</p>

<p>
  <strong>Nutritions:</strong>
  <%= @recipe.nutritions %>
</p>

<p>
  <strong>User:</strong>
  <%= @recipe.user_id %>
</p>

