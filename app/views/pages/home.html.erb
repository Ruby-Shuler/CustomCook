<section class="page">

  <h1><span><%= image_tag('star.png') %></span>Рецепт дня</h1>

  <section class="big_card">
    <% @random_recipe = Recipe.all.sample %>
    <%= link_to @random_recipe do %>
      <%= image_tag @random_recipe.recipe_attachments.first.recipe_image.to_s %>

      <div class="info">
        <h2><%= @random_recipe.title %></h2>

        <div class="recipe_info">
          <p><%= @random_recipe.nutritions %> ккал</p>
          <p class="clock"><span><%= image_tag('clock.svg') %></span><%= @random_recipe.time %> мин</p>
          <p><%= @random_recipe.difficulty %></p>
        </div>

        <div class="recipe_attr">
          <span>
            <%= image_tag('saved.png') %> 6
          </span>
          <span>
            <%= image_tag('fork.svg') %> 2
          </span>
          <span>
            <%= image_tag('cooked.svg') %> 8
          </span>
        </div>
      </div>
    <% end %>
  </section>

  <h3>Категории</h3>
  <section class="categories">
    <% @categories.each do |category| %>
      <h3 class="category_tag"><%= category.category_name %></h3>
    <% end %>
  </section>


  <% @random_category = Category.all.sample %>
  <h3><% @random_category.category_name %></h3>

  <section class="cards">
    <% Recipe.all.each do |recipe| %>

      <section class="card">
      <%= link_to recipe do %>
        <%= image_tag recipe.recipe_attachments.first.recipe_image.to_s %>
        <h2><%= recipe.title %></h2>

        <a class="category_tag"><%= recipe.category.category_name %></a>

        <div class="recipe_info">
          <p><%= recipe.nutritions %>ккал</p>
          <p class="clock"><span><%= image_tag('clock.svg') %></span><%= recipe.time %>мин</p>
          <p><%= recipe.difficulty %></p>
        </div>
      <% end %>
      </section>

    <% end %>
  </section>


</section>
