<%= form_with(model: step, local: true) do |form| %>
  <% if step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
      <% step.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
      <%= form.label :recipe_id %>
      <%= select("step", "recipe_id", Recipe.all.collect { |a| [a.title, a.id] }, { include_blank: true }) %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.label :step_image %>
      <%= form.file_field :step_image %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.label :description %>
      <%= form.text_field :description %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.label :position %>
      <%= form.number_field :position %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
